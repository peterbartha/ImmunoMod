				"WN8": [{"value": 315, "color": "Red"}, {"value": 760,  "color": "Orange"}, {"value": 1325, "color": "Yellow"}, {"value": 1980, "color": "Green"}, {"value": 2570, "color": "Cyan"}, {"value": 9999,  "color": "Purple"}],
